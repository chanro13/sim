<!DOCTYPE html>
<html>
<head>
	<title>Jam chanro</title>
	<script type="text/javascript">
		window.onload = function() {jam();}

		function jam() {
			var a = document.getElementById('jam'),
			d = new Date(), h, m, s;
			h = d.getHours();
			m = set(d.getMinutes());
			s = set(d.getSeconds());

			a.innerHTML = h + ":" + m + ":" + s;

		    setTimeout('jam()', 1000);
		}

		function set(a) {
			a = a < 10 ? '0' + a : a;
			return a;
		}
	</script>
</head>
<body style="font-size: 100px;
             font-family: artial; 
             color: #000;
               " id="jam">

</body>
</html>
